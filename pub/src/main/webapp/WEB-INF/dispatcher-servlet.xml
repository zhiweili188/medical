	 <mvc:interceptors>
         <mvc:interceptor>
            <!-- 对所有的请求拦截使用/** ,对某个模块下的请求拦截使用：/myPath/* -->
            <mvc:mapping path="/**" />
              <bean id="loginIntercepter" class="com.szreach.medical.auth.intercepters.LoginIntercepter">
		    </bean>
        </mvc:interceptor>
         <!-- 配置Token拦截器，防止用户重复提交数据 -->
