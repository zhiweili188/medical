	<mvc:interceptors>
		<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor"></bean>
	</mvc:interceptors>
	
	<!-- 国际化的消息资源文件 -->
    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <!-- 在web环境中一定要定位到classpath 否则默认到当前web应用下找  -->
                <value>classpath:messages</value>
            </list>
        </property>
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="cacheSeconds" value="60"/>
    </bean>
    
    <!-- 邮箱服务器配置 -->  
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">  
				<!--默认的编码方式 -->  
	            <property name="defaultEncoding" value="UTF-8"/>  
				<!--邮箱服务器的主机地址 -->  
	            <property name="host" value="${mail.smtp.host}"/>  
				<!--服务器的端口号 -->  
	            <property name="port" value="${mail.smtp.port}"/>  
				<!--连接服务器的用户名 也就是你的QQ邮箱的地址名例如xxx@qq.com-->  
	            <property name="username" value="${mail.smtp.username}"/>  
				<!--密码 就是你登陆邮箱的密码 -->  
	            <property name="password" value="${mail.smtp.passwd}"/>  
				<!--下面就是smtp的一些设置-->  
	            <property name="javaMailProperties">  
	            <props>  
				<!--设置自动登录-->  
	             <prop key="mail.smtp.auth">${mail.smtp.auth}</prop>  
				<!-- 设置端口的进入优先命令状态-->  
	        	<prop key="mail.smtp.starttls.enable">false</prop>  
	             </props>  
	            </property>  
	</bean> 
	<!-- freemarker config -->
	<bean id="freeMarkerConfigurer" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
		<property name="templateLoaderPath" value="/WEB-INF/email/" />
		<property name="freemarkerSettings">
			<props>
				<prop key="template_update_delay">1800</prop>
				<prop key="defaultEncoding">utf-8</prop>
				<prop key="locale">zh_CN</prop>
			</props>
		</property>
	</bean>
	<bean id="mailService" class="com.szreach.medical.mail.service.MailServiceImpl">
		<property name="freeMarkerConfigurer" ref="freeMarkerConfigurer" />
		<property name="mailSender" ref="mailSender" />
		<property name="emailFrom" value="${mail.smtp.username}" />
		<property name="fromDisplayName" value="通知邮件" />
		<property name="taskExecutor"  ref="taskExecutor"/>
		<!-- <property name="replyTo" value="364618965@qq.com" />  -->
	</bean>
	
	<bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="2"/>
		<property name="maxPoolSize" value="10"/>
	</bean>
	
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
		<property name="suffix">
			<value>.ftl</value>
		</property>
		<property name="contentType" value="text/html;charset=utf-8"></property>
	</bean>
	
	
	
	
